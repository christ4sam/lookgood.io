<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="thumbnail">
    <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{location.latitude}%2C#{location.longitude}", {style: "height: 150px;"} %> 
    <div class="caption">    
      <h3><%= truncate(location.address, length: 30) %></h3>
      <p><%= link_to 'View', location, class: "btn btn-default" %></p>
    </div>
  </div>
</div>