<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="thumbnail">
    <%= link_to image_tag(brand.logo_url, {style: "height: 100px;"}), brand.url %>
    <div class="caption">    
      <h3><%= link_to truncate(brand.name, length: 15),  brand %></h3>
      <p><%= truncate(brand.description, length: 30) %></p>
      <p><%= link_to 'View', brand.url, class: "btn btn-default" %></p>
    </div>
  </div>
</div>